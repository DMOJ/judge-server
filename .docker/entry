#!/bin/bash

export DMOJ_IN_DOCKER=1
export PYTHONUNBUFFERED=1
export LANG=C.UTF-8
export PYTHONIOENCODING=utf8

mkdir -p /opt/jail/tmp && mount --bind /tmp /opt/jail/tmp
mkdir -p /opt/jail/dev && mount --bind /dev /opt/jail/dev
mkdir -p /opt/jail/proc && mount --bind /proc /opt/jail/proc

cd /judge
pip3 install -q -e .

if [ "$1" == "run" ]; then
    command=dmoj
elif [ "$1" == "cli" ]; then
    command=dmoj-cli
else
    echo "Invalid command, must be one of [run, cli]" 1>&2
    exit 1
fi

shift
. ~judge/.profile
runuser -u judge "${command}" -- $@
